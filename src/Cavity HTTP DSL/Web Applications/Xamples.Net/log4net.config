<?xml version="1.0" encoding="utf-8"?>
<log4net>
  <appender name="app" type="log4net.Appender.RollingFileAppender">
    <file value="app.log" />
    <appendToFile value="true" />
    <rollingStyle value="Date" />
    <datePattern value=" yyyy-MM-dd+HH'.log'" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %-5level %logger :: %property{signature} &gt; %message%newline" />
    </layout>
  </appender>
  <appender name="app-exception" type="log4net.Appender.RollingFileAppender">
    <file value="app-exception.log" />
    <appendToFile value="true" />
    <rollingStyle value="Date" />
    <datePattern value=" yyyy-MM-dd+HHmm'.log'" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %-5level %logger :: %property{signature} &gt; %message%newline" />
    </layout>
    <threshold value="WARN" />
  </appender>
  <root>
    <level value="ALL" />
    <appender-ref ref="app" />
    <appender-ref ref="app-exception" />
  </root>
</log4net>