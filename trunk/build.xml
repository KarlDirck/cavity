  </ImportGroup>
  <!-- PropertyGroup>
    <NET20>true</NET20>
    <NET35>true</NET35>
    <NET40>true</NET40>
  </PropertyGroup -->
  <PropertyGroup>
    <Configuration Condition="'$(Configuration)'==''">Release</Configuration>
  </PropertyGroup>
  <Target Name="Run" DependsOnTargets="Version">
    <CallTarget Targets="Clean" />
    <CallTarget Targets="Build" />
    <CallTarget Targets="Test Facts" />
